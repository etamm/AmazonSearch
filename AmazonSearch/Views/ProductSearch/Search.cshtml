            }
            #errorMessage {
                position:absolute;
                color:#FFDAB2;
                top:5px;
                left:230px;
                font-family:Arial;
                font-size:20px;
            }

            #currencySelection {
                position:absolute;
                top:35px;
                left:5px;
                font-family:Arial;
                font-size:18px;
                color: #131C4B;
            }

            #currencySelector {
                border:1px solid #A88D4C;
                background-color:#7781B9;
                color:#131C4B;
            }

            #resultsDiv {
                position:absolute;
                top:60px;
