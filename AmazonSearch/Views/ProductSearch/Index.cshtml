@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
    <head>
        <title>Amazon product search</title>
    </head>
    <body>
        <style type="text/css">
            body {
                background-color:#8890B9;
            }
            #search {
                position:absolute;
                background-color: #131C4B;
                width: 100%;
                height: 128px;
                left:0;
                top:50%;
                margin-top: -64px; /* -height/2*/
                
            }
            #title {
                color:#8890B9;
                position:absolute;
                top:0;
                font-family:Arial;
                font-style:normal;
                text-align:center;  
                width:100%;

            }
            #search-form {
                color:#A0A5C2;
                position:absolute;
                top:65px;
                left:50%;
                margin-left: -302.5px;
            }

            #searchKeywords {
                width: 361px;
                border:1px solid #A88D4C;
                background-color:#7781B9;
                color:#131C4B;
                
            }
            #indexSelection {
                width: 123px;
                border:1px solid #A88D4C;
                background-color:#7781B9;
                color:#131C4B;
            }

            #searchButton {
                width: 121px;
                border:1px solid #A88D4C;
                background-color:#7781B9;
                color:#131C4B;
            }
                
        </style>
        <div id="search">
            <div id="title">
                <h2>Amazon Product Search</h2>
            </div>

            <div id="search-form">
                <form method="post" action="/ProductSearch/Search">
                    <select id="indexSelection" name="searchIndex">
                        @foreach (string value in ViewBag.SearchIndexValues)
                        {
                            <option value="@value">@value</option>
                        }
                    </select>
                    <input id="searchKeywords" type="text" name="searchKeywords" />
                    <input id="pageNr" type="hidden" name="pageNr" value="0" />
                    <input id="searchButton" type="submit" value="Search" />
                </form>
            </div>
        </div>
    </body>
</html>